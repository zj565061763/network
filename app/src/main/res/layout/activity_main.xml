<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_SampleCurrentNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SampleCurrentNetwork"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_SampleAllNetworks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SampleAllNetworks"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_SampleNetworkAwait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SampleNetworkAwait"
        android:textAllCaps="false" />

</LinearLayout>